---
import { detailedFeatures } from '../../data/detailedFeatures';
---

<section class="py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {detailedFeatures.map((feature, index) => (
      <div class={`flex flex-col lg:flex-row gap-12 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''} ${index !== 0 ? 'mt-32' : ''}`}>
        <div class="flex-1">
          <h3 class="text-3xl font-bold text-gray-900">{feature.title}</h3>
          <p class="mt-4 text-lg text-gray-600">{feature.description}</p>
          <ul class="mt-8 space-y-4">
            {feature.benefits.map((benefit) => (
              <li class="flex items-center gap-3">
                <span class="text-primary">âœ“</span>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="flex-1">
          <img
            src={feature.image}
            alt={feature.title}
            class="rounded-xl shadow-lg"
          />
        </div>
      </div>
    ))}
  </div>
</section>
