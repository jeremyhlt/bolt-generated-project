---
import FeatureCard from './features/FeatureCard.astro';
import { features } from '../data/features';
---

<section class="py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
        Everything you need for better briefs
      </h2>
      <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
        Powerful features to streamline your marketing brief creation process and improve team collaboration.
      </p>
    </div>
    
    <div class="mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature) => (
        <FeatureCard {...feature} />
      ))}
    </div>

    <div class="mt-16 relative">
      <div class="absolute inset-0 bg-primary/5 rounded-2xl"></div>
      <img
        src="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?auto=format&fit=crop&w=1500&q=80"
        alt="Briefr dashboard"
        class="rounded-2xl shadow-xl w-full"
      />
    </div>
  </div>
</section>
