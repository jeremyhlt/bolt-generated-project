---
const team = [
  {
    name: "Alex Thompson",
    role: "CEO & Co-founder",
    bio: "Former marketing executive with 15+ years of experience in digital marketing and team management.",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?auto=format&fit=crop&w=400&q=80"
  },
  {
    name: "Sarah Chen",
    role: "CTO & Co-founder",
    bio: "AI expert and software architect with a passion for building intuitive tools for marketers.",
    image: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?auto=format&fit=crop&w=400&q=80"
  },
  {
    name: "Marcus Rodriguez",
    role: "Head of Product",
    bio: "Product leader focused on creating seamless user experiences and driving innovation.",
    image: "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?auto=format&fit=crop&w=400&q=80"
  }
];
---

<section class="py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900">Meet Our Team</h2>
      <p class="mt-4 text-lg text-gray-600">The people behind Briefr's mission to transform marketing workflows</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {team.map((member) => (
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
          <img
            src={member.image}
            alt={member.name}
            class="w-full h-64 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900">{member.name}</h3>
            <p class="text-primary font-medium mb-4">{member.role}</p>
            <p class="text-gray-600">{member.bio}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
